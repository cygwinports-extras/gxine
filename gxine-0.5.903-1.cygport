DESCRIPTION="GTK+ Xine frontend"
HOMEPAGE="http://xinehq.de/"
SRC_URI="mirror://sourceforge/xine/${P}.tar.bz2"

DIFF_EXCLUDES="version.h misc"

CYGCONF_ARGS="
	--with-spidermonkey=/usr/include/js
	--disable-lirc
	--disable-gtk-compat
	--disable-dependency-tracking
	--without-xinerama
"

src_install() {
	cd ${B}
	cyginstall \
 		docdir=/usr/share/doc/${P} \
		docsdir=/usr/share/doc/${P}

	dodoc ${S}/README{.cs,.de,_l10n}
}
